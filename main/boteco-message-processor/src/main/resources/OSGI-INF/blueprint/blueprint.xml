<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <!-- Dynamic list containing all message processors in the OSGi Registry -->
  <reference-list id="messageProcessors"
                  interface="tools.devnull.boteco.domain.MessageProcessor"/>

  <reference id="client" interface="tools.devnull.boteco.domain.client.jms.JmsClient"/>

  <service id="message-sender"
           interface="tools.devnull.boteco.domain.MessageSender">
    <bean class="tools.devnull.boteco.message.BotecoMessageSender">
      <argument ref="client"/>
      <argument value="boteco.message.%s"/>
    </bean>
  </service>

  <service id="message-dispatcher"
           interface="tools.devnull.boteco.domain.MessageDispatcher">
    <bean class="tools.devnull.boteco.message.BotecoMessageDispatcher">
      <argument ref="client"/>
      <argument value="boteco.process"/>
    </bean>
  </service>

  <bean id="processor" class="tools.devnull.boteco.message.BotecoMessageProcessor">
    <argument ref="messageProcessors"/>
  </bean>

  <camelContext id="boteco-content-processing-strategy"
                xmlns="http://camel.apache.org/schema/blueprint">
    <route id="boteco.message.processing">
      <from uri="activemq:queue:boteco.process"/>
      <process ref="processor"/>
    </route>
  </camelContext>

  <reference id="activemq" interface="org.apache.camel.Component" filter="(component=activemq)"/>

</blueprint>
