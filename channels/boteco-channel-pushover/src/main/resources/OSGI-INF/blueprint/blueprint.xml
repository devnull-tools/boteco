<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder id="pushover.properties"
                           persistent-id="tools.devnull.boteco.channel.pushover"
                           placeholder-prefix="{{"
                           placeholder-suffix="}}">
    <cm:default-properties>
      <cm:property name="pushover.token" value=""/>
    </cm:default-properties>
  </cm:property-placeholder>

  <service id="pushover-channel" interface="tools.devnull.boteco.Channel">
    <service-properties>
      <entry key="id" value="pushover"/>
    </service-properties>
    <bean class="tools.devnull.boteco.channel.pushover.PushoverChannel"/>
  </service>

  <bean id="parser" class="tools.devnull.boteco.channel.pushover.ContentParser">
    <argument>
      <reference interface="tools.devnull.boteco.message.FormatExpressionParser"/>
    </argument>
    <argument>
      <bean class="tools.devnull.boteco.DefaultContentFormatter"/>
    </argument>
  </bean>

  <camelContext id="boteco-channel-pushover"
                xmlns="http://camel.apache.org/schema/blueprint">

    <route id="boteco.message.to.pushover">
      <from uri="activemq:queue:boteco.message.pushover"/>
      <log logName="boteco-channel-pushover"
           loggingLevel="DEBUG"
           message="sending message to pushover"/>
      <setHeader headerName="CamelHttpQuery">
        <simple>
          token={{pushover.token}}&amp;user=${body.target}&amp;message=${bean:parser.parse(${body.content})}
        </simple>
      </setHeader>
      <setHeader headerName="CamelHttpMethod">
        <simple>POST</simple>
      </setHeader>
      <setBody>
        <constant>null</constant>
      </setBody>
      <to uri="https4:api.pushover.net/1/messages.json"/>
    </route>

  </camelContext>

  <reference id="activemq" interface="org.apache.camel.Component" filter="(component=activemq)"/>

</blueprint>
