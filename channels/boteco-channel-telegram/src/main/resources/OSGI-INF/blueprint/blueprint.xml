<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder id="telegram.properties"
                           persistent-id="tools.devnull.boteco.channel.telegram"
                           placeholder-prefix="{{"
                           placeholder-suffix="}}">
    <cm:default-properties>
      <!-- The bot's token -->
      <cm:property name="bot.token" value=""/>
      <!-- The bot's username -->
      <cm:property name="bot.username" value=""/>
      <!-- The chat ids the bot should listen to -->
      <cm:property name="bot.command.expression" value="^/\S+(@{{bot.username}})?\s+"/>
      <!-- The polling interval -->
      <cm:property name="polling.interval" value="2s"/>
      <!--
        The initial value of the offset

        Notice that an offset of 0 will not load messages already marked as
        received. Use this offset if the channel was down for a long time and you
        don't want to process older messages.
      -->
      <cm:property name="polling.initial-offset" value="0"/>
      <cm:property name="delivery.consumers" value="10"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="telegram-command-extractor"
        class="tools.devnull.boteco.message.ExpressionCommandExtractor">
    <argument value="{{bot.command.expression}}"/>
  </bean>

  <bean id="offset-manager" class="tools.devnull.boteco.channel.telegram.TelegramOffsetManager">
    <argument value="{{polling.initial-offset}}"/>
  </bean>

  <reference id="message-dispatcher" interface="tools.devnull.boteco.message.MessageDispatcher"/>

  <bean id="service-locator" class="tools.devnull.boteco.OsgiServiceLocator"/>

  <reference id="user-manager" interface="tools.devnull.boteco.user.UserManager"/>

  <bean id="telegram-income-processor" class="tools.devnull.boteco.channel.telegram.TelegramIncomeProcessor">
    <argument ref="telegram-command-extractor"/>
    <argument ref="offset-manager"/>
    <argument ref="message-dispatcher"/>
    <argument ref="service-locator"/>
    <argument ref="user-manager"/>
  </bean>

  <bean id="telegram-message-json" class="org.apache.camel.component.gson.GsonDataFormat">
    <property name="unmarshalType" value="tools.devnull.boteco.channel.telegram.TelegramPolling"/>
    <property name="fieldNamingPolicy" value="LOWER_CASE_WITH_UNDERSCORES"/>
  </bean>

  <bean id="telegram-outcome-processor" class="tools.devnull.boteco.channel.telegram.TelegramOutcomeProcessor">
    <argument>
      <reference interface="tools.devnull.boteco.message.FormatExpressionParser"/>
    </argument>
    <argument>
      <bean class="tools.devnull.boteco.channel.telegram.TelegramContentFormatter"/>
    </argument>
    <argument>
      <bean class="tools.devnull.boteco.DefaultContentFormatter"/>
    </argument>
    <argument>
      <reference interface="tools.devnull.boteco.client.rest.RestClient"/>
    </argument>
    <argument value="{{bot.token}}"/>
  </bean>

  <service id="telegram-channel" interface="tools.devnull.boteco.Channel">
    <service-properties>
      <entry key="id" value="telegram"/>
    </service-properties>
    <bean class="tools.devnull.boteco.channel.telegram.TelegramChannel"/>
  </service>

  <service interface="tools.devnull.boteco.message.MessageProcessor">
    <bean class="tools.devnull.boteco.channel.telegram.TelegramIDMessageProcessor"/>
  </service>

  <camelContext id="boteco-channel-telegram"
                xmlns="http://camel.apache.org/schema/blueprint">

    <route id="boteco.message.from.telegram">
      <from uri="timer:telegram?period={{polling.interval}}"/>
      <log message="Pooling Telegram for new messages"
           logName="boteco-message-telegram"
           loggingLevel="DEBUG"/>
      <setHeader headerName="CamelHttpQuery">
        <simple>offset=${bean:offset-manager.nextId}</simple>
      </setHeader>
      <to uri="https4:api.telegram.org/bot{{bot.token}}/getUpdates"/>
      <split>
        <jsonpath>$.result</jsonpath>
        <unmarshal ref="telegram-message-json"/>
        <process ref="telegram-income-processor"/>
      </split>
    </route>

    <route id="boteco.message.to.telegram">
      <from uri="activemq:queue:boteco.message.telegram?concurrentConsumers={{delivery.consumers}}"/>
      <log logName="boteco-channel-telegram"
           loggingLevel="INFO"
           message="sending message through telegram"/>
      <process ref="telegram-outcome-processor"/>
    </route>

  </camelContext>

  <reference id="activemq" interface="org.apache.camel.Component" filter="(component=activemq)"/>

</blueprint>
