<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="bomb-bag" class="tools.devnull.boteco.plugins.timebomb.BombBag"/>
  <reference id="message-sender" interface="tools.devnull.boteco.message.MessageSender"/>

  <service interface="tools.devnull.boteco.message.MessageProcessor">
    <bean class="tools.devnull.boteco.plugins.timebomb.TimebombMessageProcessor">
      <argument ref="message-sender"/>
      <argument ref="bomb-bag"/>
    </bean>
  </service>

  <service interface="tools.devnull.boteco.message.MessageProcessor">
    <bean class="tools.devnull.boteco.plugins.timebomb.DefuseMessageProcessor">
      <argument ref="bomb-bag"/>
    </bean>
  </service>

</blueprint>