<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder id="mongodb.properties"
                           persistent-id="tools.devnull.boteco.plugins.mongodb"
                           placeholder-prefix="{{"
                           placeholder-suffix="}}">
    <cm:default-properties>
      <cm:property name="db.url" value="mongodb://localhost:27017"/>
      <cm:property name="db.database" value="boteco"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <service id="mongo-database" interface="com.mongodb.client.MongoDatabase">
    <bean class="tools.devnull.boteco.persistence.mongodb.MongoDatabaseFactory"
          factory-method="createDatabase">
      <argument value="{{db.url}}"/>
      <argument value="{{db.database}}"/>
    </bean>
  </service>

</blueprint>
